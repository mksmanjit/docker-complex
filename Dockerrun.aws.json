{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions":[
        {
            "name":"client",
            "image":"mksmanjit/complex-client",
            "hostname": "client",
            "essential": false
        },{
            "name":"server",
            "image":"mksmanjit/complex-server",
            "hostname": "api",
            "essential": false
        },{
            "name":"worker",
            "image":"mksmanjit/complex-worker",
            "hostname": "worker",
            "essential": false
        }
        ,{
            "name":"nginx",
            "image":"mksmanjit/complex-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings":[
                {
                    "hostPort":80,
                    "container":80
                }
            ],
            "links":["client","server"]
        }
    ]

}